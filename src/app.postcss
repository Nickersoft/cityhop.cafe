/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
	.label {
		@apply text-xs opacity-75 hover:opacity-100 transition-all duration-150 uppercase font-medium tracking-widest;
	}
}

@layer utilities {
	.glow {
		text-shadow: 0 0 6px rgba(255, 255, 255, 0.5);
	}
}
